
@{
    ViewBag.Title = "one_three";
}
<style>
    th{
        background-color:#3f3f42;
        color:#e7e9ed;
    }
    td,th{
        padding:2vmin;
    }
</style>

<h2>Question 1.3</h2>
<p>List all products stored in bottle.</p>
<table>
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Quantity Per Unit</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>Supplier Name</th>
            <th>Supplier Country</th>
        </tr>
    </thead>
    <tbody>
        @{int counter = 0;}

        @foreach ((int ProductID, string ProductName, string QuantityPerUnit, short? UnitsInStock, decimal? UnitPrice, string CompanyName, string Country) product in ViewBag.product)
        {
            var color = counter % 2 == 0?  "style=background-color:#bbb" : "style=background-color:#eee";
            <tr @color  >
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.QuantityPerUnit</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td>@product.CompanyName</td>
                <td>@product.Country</td>
            </tr>
            counter++;
        }
    </tbody>
</table>
